@model List<string>
@{
    ViewBag.Title = "ChangeUserPassword";
}
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
<h2>ChangeUserPassword</h2>

@using (@Ajax.BeginForm(
    new AjaxOptions 
    {
        Url = "GeneratePasswordResetToken",
        HttpMethod = "Post",
        UpdateTargetId = "message-element",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "loading-element"     
    }))
{
    <div id="loading-element" style="display:none;">LOADING >>>> please wait</div>
    @Html.Kendo().AutoComplete().Name("userName").Filter(FilterType.Contains).BindTo(Model)
    <input type="submit" value="Generate change password token." />
}
<div id="message-element"></div>
